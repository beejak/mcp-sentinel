# MCP Sentinel Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=info          # debug, info, warning, error, critical

# ============================================================================
# DATABASE
# ============================================================================
DB_USER=sentinel
DB_PASSWORD=sentinel_dev_password_change_me
DB_NAME=mcp_sentinel
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql+asyncpg://sentinel:sentinel_dev_password_change_me@localhost:5432/mcp_sentinel

# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password_change_me
REDIS_URL=redis://:redis_dev_password_change_me@localhost:6379/0

# ============================================================================
# CELERY
# ============================================================================
CELERY_BROKER_URL=redis://:redis_dev_password_change_me@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:redis_dev_password_change_me@localhost:6379/2

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Only for development

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=dev_secret_key_change_in_production_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# AI PROVIDERS
# ============================================================================

# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.1

# Google (Gemini)
GOOGLE_API_KEY=...
GOOGLE_MODEL=gemini-pro
GOOGLE_MAX_TOKENS=4000

# Ollama (Local LLMs)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_MAX_TOKENS=4000

# ============================================================================
# OBJECT STORAGE (S3/MinIO)
# ============================================================================
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=mcp-sentinel-reports
S3_REGION=us-east-1

# ============================================================================
# INTEGRATIONS - ISSUE TRACKING
# ============================================================================

# Jira
JIRA_ENABLED=false
JIRA_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=...
JIRA_PROJECT_KEY=SEC
JIRA_ISSUE_TYPE=Security Bug

# ServiceNow
SERVICENOW_ENABLED=false
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=...
SERVICENOW_PASSWORD=...

# Linear
LINEAR_ENABLED=false
LINEAR_API_KEY=...
LINEAR_TEAM_ID=...

# ============================================================================
# INTEGRATIONS - NOTIFICATIONS
# ============================================================================

# Slack
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
SLACK_CHANNEL=#security-alerts
SLACK_BOT_TOKEN=xoxb-...

# Microsoft Teams
TEAMS_ENABLED=false
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...

# PagerDuty
PAGERDUTY_ENABLED=false
PAGERDUTY_API_KEY=...
PAGERDUTY_SERVICE_ID=...

# Email (SMTP)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=...
EMAIL_FROM=security@company.com
EMAIL_TO=security-team@company.com

# ============================================================================
# INTEGRATIONS - SECRET MANAGEMENT
# ============================================================================

# HashiCorp Vault
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=...
VAULT_NAMESPACE=mcp-sentinel

# AWS Secrets Manager
AWS_SECRETS_ENABLED=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...

# Azure Key Vault
AZURE_KEYVAULT_ENABLED=false
AZURE_KEYVAULT_URL=https://your-vault.vault.azure.net/
AZURE_TENANT_ID=...
AZURE_CLIENT_ID=...
AZURE_CLIENT_SECRET=...

# ============================================================================
# INTEGRATIONS - VERSION CONTROL
# ============================================================================

# GitHub
GITHUB_ENABLED=false
GITHUB_TOKEN=ghp_...
GITHUB_OWNER=your-org
GITHUB_REPO=your-repo

# GitLab
GITLAB_ENABLED=false
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=...
GITLAB_PROJECT_ID=...

# ============================================================================
# INTEGRATIONS - CI/CD
# ============================================================================

# GitHub Actions
GITHUB_ACTIONS_ENABLED=false

# GitLab CI
GITLAB_CI_ENABLED=false

# Jenkins
JENKINS_ENABLED=false
JENKINS_URL=http://jenkins.company.com
JENKINS_USERNAME=...
JENKINS_API_TOKEN=...

# ============================================================================
# INTEGRATIONS - LOGGING & MONITORING
# ============================================================================

# Splunk
SPLUNK_ENABLED=false
SPLUNK_HEC_URL=https://splunk.company.com:8088
SPLUNK_HEC_TOKEN=...
SPLUNK_INDEX=mcp_sentinel

# Datadog
DATADOG_ENABLED=false
DATADOG_API_KEY=...
DATADOG_APP_KEY=...
DATADOG_SITE=datadoghq.com

# Elasticsearch
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=...
ELASTICSEARCH_INDEX=mcp-sentinel

# Sentry
SENTRY_ENABLED=false
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================================================
# MONITORING
# ============================================================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Flower (Celery monitoring)
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:admin

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
MAX_WORKERS=4
CACHE_TTL=3600
PARALLEL_EXECUTION=true
BATCH_SIZE=100

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_STATIC_ANALYSIS=true
ENABLE_SEMANTIC_ANALYSIS=true
ENABLE_SAST=true
ENABLE_AI_ANALYSIS=true
ENABLE_THREAT_INTEL=true

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# CORS
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
